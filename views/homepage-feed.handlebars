{{> header}}
<div class="homepage-main main">
  <div class="feed">
    <div class="homepage-navbar">
      <a href="/"><h1>Challenges</h1></a>
      <a href="/feed"><h1 class="is-active">Posts</h1></a>
    </div>
    {{#each posts as |post|}}
        <div class="post">
            <!--Username-->
            <h1 class="post-username"><i class="fas fa-user-circle small-profile profile"></i> {{user.username}}</h1>
            <!--Challenge title and date-->
            <h1 class="post-title">{{challenge.title}} &#183; {{date_created}}</h1>
   
            <!--Content-->
            <p class="challenge-desc">{{text}}</p>
        </div>
        {{/each}}
  </div>
  <aside>
    <h2>Your Challenges</h2>
    <ul class="challenge-list">
      {{#each userChallenges as |userChallenge|}}
        <li>{{userChallenge.title}}</li>
      {{/each}}
    </ul>
    <p class="tinytext copyright">&copy; 2022 Pod 1</p>
  </aside>
</div>