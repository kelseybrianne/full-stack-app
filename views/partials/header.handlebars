<nav>
  <div class="header">
    <a href="/"><h2 id="logo">Join In</h2></a>
    <div>
      <!-- Button trigger modal -->
      <a type="button" {{! class="btn btn-primary" }} data-toggle="modal" data-target="#exampleModal"><i
          class="fas fa-plus-circle icon"></i>
      </a>
      <a class="dropdown" id="profile-icon">
        <a class="" id="dropdownMenuButton" data-toggle="dropdown" aria-expanded="false">
          <i class="fas fa-user-circle icon"></i>
        </a>
        <div class="dropdown-menu" id="dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item" href="/profile">Profile</a>
          <div class="dropdown-divider"></div>
          {{#if logged_in}}
          <a class="dropdown-item" href="/logout">Log out</a>
          {{else}}
          <a class="dropdown-item" href="/login">Log in</a>
          {{/if}}
        </div>
    </div>

  </div>
  </div>
</nav>
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create new challenge</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="post-challenge-btn">
          <div class="form-group">
            <input type="text" class="form-control" id="challenge-title" placeholder="Title" />
          </div>
          <div class="form-group">
            <textarea class="form-control" id="description" placeholder="Description" rows="10"></textarea>
          </div>
          <div class="form-group">
            <p><input class="form-control small" placeholder="Ending date" type="text" id="datepicker"></p>
          </div>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="submit" class="btn btn-primary btn-custom">Share</button>
        </form>

      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js/createChallenge.js"></script>
<script src="/js/header.js"></script>