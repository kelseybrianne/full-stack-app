<nav>
  <div class="header">
    <h2 id="logo">Join In</h2>
    <div>
      <!-- Button trigger modal -->
      <a
        type="button"
        {{! class="btn btn-primary" }}
        data-toggle="modal"
        data-target="#exampleModal"
      ><i class="fas fa-plus-circle icon"></i>
      </a>
      <a href="" id="profile-icon">
        <i class="fas fa-user-circle icon"></i>
        <div id="dropdown-menu" class="hidden">
          <a href="/profile">
            <p>Profile</p>
          </a>
          {{#if logged_in}}
            <a href="/logout">
              <p>Log out</p>
            </a>
          {{else}}
            <a href="/login">
              <p>Log in</p>
            </a>
          {{/if}}
        </div>
      </a>

    </div>
  </div>
</nav>
<!-- Modal -->
<div
  class="modal fade"
  id="exampleModal"
  tabindex="-1"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
>
  <div
    class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg"
  >
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Create new challenge</h5>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="login-form">
          <div class="form-group">
            <input
              type="text"
              class="form-control"
              id="challenge-title"
              placeholder="Title"
            />
          </div>
          <div class="form-group">
            <textarea
              class="form-control"
              id="description"
              placeholder="Description" rows="10"></textarea>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="btn btn-secondary"
          data-dismiss="modal"
        >Close</button>
        <button type="button" class="btn btn-primary btn-custom">Share</button>
      </div>
    </div>
  </div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="/js/header.js"></script>